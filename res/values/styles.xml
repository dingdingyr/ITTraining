<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="NoTitle" parent="AppBaseTheme">
        <item name="android:windowTitleSize">47dp</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="textview_regular" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="textview_regular_details_bold" parent="@style/textview_regular">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="imageview">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">80dp</item>
    </style>
    
    <style name="mystyle" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:popupBackground">@drawable/frame</item>
       <item name="android:dropDownVerticalOffset">5dp</item> <!--  设置与editText之间的距离  -->
    </style>

</resources>